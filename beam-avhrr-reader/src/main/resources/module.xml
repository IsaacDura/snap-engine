<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>s3tbx-avhrr-reader</symbolicName>
    <version>0.5</version>
    <name>AVHRR Product Reader</name>

    <description>Enables SNAP to read AVHRR/3 Level-1b data products.</description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max-Planck-Str. 2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2014 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <changelog>
        <![CDATA[
        ]]>
    </changelog>

    <dependency>
        <module>snap-binio</module>
    </dependency>
    <dependency>
        <module>snap-core</module>
    </dependency>
    <dependency>
        <module>snap-visat-rcp</module>
        <optional>true</optional>
    </dependency>

    <categories>Reader,AVHRR</categories>

    <extension point="snap-ui:actions">
        <action>
            <id>importNoaaAvhrr3L1bProduct</id>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <formatName>NOAA_AVHRR_3_L1B</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <mnemonic>V</mnemonic>
            <shortDescr>Import a NOAA-AVHRR/3 Level-1b data product or product subset.</shortDescr>
            <helpId>importAvhrr3L1bProduct</helpId>
            <largeIcon>icons/Import24.gif</largeIcon>
            <parent>importMultispectral</parent>
        </action>
    </extension>

    <extension point="snap-core:rgbProfiles">
        <rgbProfile>
            <name>AVHRR/3 L1b - 3a,2,1, Day</name>
            <red>radiance_3a</red>
            <green>radiance_2</green>
            <blue>radiance_1</blue>
        </rgbProfile>
        <rgbProfile>
            <name>AVHRR/3 L1b - 5,4,3b, Night</name>
            <red>temp_5</red>
            <green>temp_4</green>
            <blue>temp_3b</blue>
        </rgbProfile>
        <rgbProfile>
            <name>AVHRR/3 L1b - 5,4,3b, Night, Inverse</name>
            <red>-temp_5</red>
            <green>-temp_4</green>
            <blue>-temp_3b</blue>
        </rgbProfile>
        <rgbProfile>
            <name>AVHRR/3 L1b - Ionian, Day</name>
            <red>radiance_1</red>
            <green>radiance_2</green>
            <blue>-radiance_4</blue>
        </rgbProfile>
    </extension>

</module>