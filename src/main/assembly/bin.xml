<!-- BEAM binary distribution -->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>

    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>dir</format>
    </formats>

    <files>
        <file>
            <source>readme.html</source>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
        </file>
        <file>
            <source>VERSION.txt</source>
            <filtered>true</filtered>
        </file>
        <file>
            <source>LICENSE.txt</source>
        </file>
    </files>

    <fileSets>

        <fileSet>
            <directory>src/main/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>s3tbx.config</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/licenses</directory>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>src/main/bin/common</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>splash-snap.png</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/bin/win</directory>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>dos</lineEnding>
            <includes>
                <include>*.bat</include>
            </includes>
            <excludes>
                <exclude>snap-cli-template.*</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/bin/linux</directory>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.sh</include>
            </includes>
            <excludes>
                <exclude>snap-cli-template.*</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/bin/macosx</directory>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.sh</include>
            </includes>
            <excludes>
                <exclude>snap-cli-template.*</exclude>
            </excludes>
            <filtered>true</filtered>
        </fileSet>

    </fileSets>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <excludes>
                <exclude>org.esa.snap:snap-beam-bootstrap</exclude>
                <exclude>org.esa.snap:snap-installer</exclude>
                <exclude>org.esa.snap:snap-rtp-codec</exclude>
                <exclude>org.esa.snap:snap-examples</exclude>
                <exclude>org.esa.snap:snap-reader-tests</exclude>
            </excludes>
            <binaries>
                <outputDirectory>modules</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>bin</outputDirectory>
                        <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
                        <includes>
                            <include>org.esa.snap:snap-launcher</include>
                        </includes>
                    </dependencySet>
                    <dependencySet>
                        <outputDirectory>lib</outputDirectory>
                        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
                        <excludes>
                            <exclude>org.esa.snap:snap-*</exclude>
                            <exclude>org.esa.s3tbx:s3tbx-*</exclude>
                            <exclude>org.esa.snap:blue-marble-worldmap</exclude>
                            <exclude>org.esa.snap:globcover-worldmap</exclude>
                            <exclude>ncsa.hdf:*</exclude>
                            <exclude>gov.nasa.gsfc.seadas:seadas-reader*</exclude>
                        </excludes>
                    </dependencySet>
                    <dependencySet>
                        <outputDirectory>modules</outputDirectory>
                        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
                        <includes>
                            <include>org.esa.snap:snap-binding</include>
                            <include>org.esa.snap:snap-binio</include>
                            <include>org.esa.snap:snap-ceres-core</include>
                            <include>org.esa.snap:snap-glayer</include>
                            <include>org.esa.snap:snap-jai</include>
                            <include>org.esa.snap:snap-ceres-ui</include>
                            <include>org.esa.snap:snap-metadata</include>
                            <include>gov.nasa.gsfc.seadas:seadas-reader*</include>
                        </includes>
                        <excludes>
                            <exclude>org.esa.snap:snap-launcher</exclude>
                            <exclude>org.esa.snap:snap-deploy</exclude>
                            <exclude>org.esa.snap:snap-site</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>

</assembly>
